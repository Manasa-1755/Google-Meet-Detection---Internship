{
  "manifest_version": 3,
  "name": "Sample",
  "version": "1.3",
  "description": "Record your active Google Meet tab and download the video.",
  "permissions": [
    "tabCapture",
    "downloads",
  ],
  "optional_permissions" : [
    "microphone"
  ]
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}


