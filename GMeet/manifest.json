{
  "manifest_version": 3,
  "name": "GMeet Meeting Tracker",
  "version": "2.0",
  "description": "Tracks Google Meet sessions and records with selectable modes.",
  "permissions": ["storage", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js", "recorder.js"],
      "run_at": "document_idle"
    }
  ]
}
